<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:paddingBottom="10dip"
    android:paddingLeft="10dip"
    android:paddingRight="10dip"
    android:paddingTop="15dip"
    tools:context="com.example.think.calculator.MainActivity">

    <EditText
        android:id="@+id/et_input"
        android:layout_width="fill_parent"
        android:layout_height="120dip"
        android:background="#00000000"
        android:textSize="50sp"
        android:textColor="#FFFFFFFF"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="right|bottom" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_input"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/btn_clearr"
            android:layout_width="0dp"
            android:layout_height="74dp"
            android:layout_weight="0.375"
            android:background="@drawable/gray_bg"
            android:text="CR"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_dell"
            android:layout_width="0dp"
            android:layout_height="74dp"
            android:layout_weight="0.375"
            android:background="@drawable/gray_bg"
            android:text="DEL"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_dividee"
            android:layout_width="0dp"
            android:layout_height="74dp"
            android:layout_weight="0.25"
            android:background="@drawable/orange_bg"
            android:text="/"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_input"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/btn_77"
            android:layout_width="0dp"
            android:layout_height="74dp"
            android:layout_weight="0.25"
            android:background="@drawable/white_bg"
            android:text="7"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_88"
            android:layout_width="0dp"
            android:layout_height="74dp"
            android:layout_weight="0.25"
            android:background="@drawable/white_bg"
            android:text="8"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_99"
            android:layout_width="0dp"
            android:layout_height="74dp"
            android:layout_weight="0.25"
            android:background="@drawable/white_bg"
            android:text="9"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_multiplyy"
            android:layout_width="0dp"
            android:layout_height="74dp"
            android:layout_weight="0.25"
            android:background="@drawable/orange_bg"
            android:text="*"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_input"
        android:layout_marginTop="150dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/btn_44"
            android:layout_width="0dp"
            android:layout_height="74dp"
            android:layout_weight="0.25"
            android:background="@drawable/white_bg"
            android:text="4"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_55"
            android:layout_width="0dp"
            android:layout_height="74dp"
            android:layout_weight="0.25"
            android:background="@drawable/white_bg"
            android:text="5"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_66"
            android:layout_width="0dp"
            android:layout_height="74dp"
            android:layout_weight="0.25"
            android:background="@drawable/white_bg"
            android:text="6"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_minuss"
            android:layout_width="0dp"
            android:layout_height="74dp"
            android:layout_weight="0.25"
            android:background="@drawable/orange_bg"
            android:text="-"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_input"
        android:layout_marginTop="220dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/btn_11"
            android:layout_width="0dp"
            android:layout_height="74dp"
            android:layout_weight="0.25"
            android:background="@drawable/white_bg"
            android:text="1"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_22"
            android:layout_width="0dp"
            android:layout_height="74dp"
            android:layout_weight="0.25"
            android:background="@drawable/white_bg"
            android:text="2"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_33"
            android:layout_width="0dp"
            android:layout_height="74dp"
            android:layout_weight="0.25"
            android:background="@drawable/white_bg"
            android:text="3"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_pluss"
            android:layout_width="0dp"
            android:layout_height="74dp"
            android:layout_weight="0.25"
            android:background="@drawable/orange_bg"
            android:text="+"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_input"
        android:layout_marginTop="290dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/btn_00"
            android:layout_width="0dp"
            android:layout_height="74dp"
            android:layout_weight="0.50"
            android:background="@drawable/white_bg"
            android:text="0"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_pointt"
            android:layout_width="0dp"
            android:layout_height="74dp"
            android:layout_weight="0.25"
            android:background="@drawable/white_bg"
            android:text="."
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_equall"
            android:layout_width="0dp"
            android:layout_height="74dp"
            android:layout_weight="0.25"
            android:background="@drawable/orange_bg"
            android:text="="
            android:textSize="20sp" />
    </LinearLayout>

</RelativeLayout>
